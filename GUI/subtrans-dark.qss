QWidget {
    font-family:system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    font-size: 10pt;
}

QLabel {
    background-color: #242424;
    color: white;
}

QSplitter::handle {
    background-color: teal;
}

QStatusBar {
    color: white;
}

.MainWindow {
    background-color: #363636;
}

.MainToolbar, .ProjectToolbar {
    background-color: #606060;
}

.LogWindow {
    background-color: black;
    border: 1px solid #242424;
}

.ScenesView {
    background-color: skyblue;
}

.TreeViewItemWidget {
    padding: 1;
    margin: 0;
    border-width: 2;
    border-style: solid;
    border-color: black;
    border-radius 12;
    background-color: #121212;
}

.WidgetHeader { 
    font-size: 12pt; 
    font-weight: bold; 
    background-color: blanchedalmond;
    padding: 4;
    padding-left: 10;
    color: black;
}

.WidgetHeader[all_translated=true] {
    background-color: blanchedalmond;
}

.WidgetHeader[all_translated=false] {
    background-color: burlywood;
}

.WidgetHeader[errors=true], .WidgetBody[errors=true] {
    color: red;
}

.WidgetSubheading {
    font-size: 10pt;
    padding: 3;
    padding-left: 10;
    background-color: #363636;
    color: lavenderblush;
}

.WidgetBody {
    font-size: 10pt;
    padding: 2;
    padding-left: 10;
    background-color: #242424;
    color: white;
}

.ContentView {
    background-color: black;
}

.SubtitleView {
    padding: 1px;
    background-color: #121212;
}

.LineItemView {
    padding: 0px;
    margin: 1px;
    background-color: #242424;
}

.LineItemHeader {
    font-weight: bold;
    margin: 0px;
}

.LineItemBody {
    margin: 0px;
}

.SelectionView {
    background-color: #242424;
}

.ProjectOptions {
    color: white;
    background-color: #121212;
}