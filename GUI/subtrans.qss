QWidget {
    font-family:system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    font-size: 10pt;
}

.MainWindow {
    background-color: aliceblue;
}

.ScenesView {
    background-color: lightyellow;
}

.TreeViewItemWidget {
    background-color: white;
    padding: 1;
    margin: 0;
    border-width: 2;
    border-style: solid;
    border-color: lightgray;
    border-radius 12;
}

.WidgetHeader { 
    font-size: 12pt; 
    font-weight: bold; 
    background-color: blanchedalmond;
    padding: 4;
    padding-left: 10;
}

.WidgetSubheading {
    font-size: 10pt;
    background-color: lavenderblush;
    padding: 3;
    padding-left: 10;
}

.WidgetBody {
    font-size: 10pt;
    padding: 2;
    padding-left: 10;
}

